{
	"name": "companion3",
	"version": "0.1.0",
	"description": "",
	"engines": {
		"node": "12.x || 14.x",
		"yarn": "1.22"
	},
	"scripts": {
		"test": "jest",
		"clean": "rimraf dist",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"build-server": "tsc",
		"dev-server": "nodemon --ignore config.json --watch src --watch ../module-framework/dist src/headless.ts",
		"dev-electron": "nodemon -e js,ts,json --ignore src/client --watch src --exec \"yarn build-server && electron .\"",
		"build": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build-server\" \"yarn build-client\"",
		"build-unpacked": "yarn build && electron-builder --dir -c.electronVersion $(node -p \"require('electron/package.json').version\")"
	},
	"keywords": [
		"typescript",
		"react",
		"starter-kit",
		"webpack",
		"fullstack",
		"express",
		"express4",
		"node"
	],
	"license": "MIT",
	"main": "dist/electron.js",
	"build": {
		"directories": {
			"buildResources": "assets/",
			"output": "electron-output/"
		},
		"files": [
			"views",
			"assets",
			"dist",
			"LICENSE",
			"!**/*.d.ts",
			"!**/*.tsbuildinfo",
			"!**/*.map"
		],
		"extraFiles": [
			"bundled-modules"
		],
		"linux": {
			"extraFiles": [
				{
					"from": "../../tools/mongodb/linux-x64",
					"to": "mongodb"
				}
			]
		}
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"globals": {
			"ts-jest": {
				"tsConfig": "<rootDir>/src/client/tsconfig-for-tests.json"
			}
		}
	},
	"dependencies": {
		"@companion/module-framework": "file:../module-framework",
		"@shared": "file:../shared",
		"asar-node": "^2.1.3",
		"axios": "^0.21.1",
		"body-parser": "^1.19.0",
		"concurrently": "^6.0.0",
		"express": "^4.17.1",
		"get-port": "^5.1.1",
		"mongodb": "^3.6.4",
		"read-pkg-up": "^7.0.1",
		"semver": "^7.3.4",
		"shortid": "^2.2.16",
		"socket.io": "^3.1.2",
		"threadedclass": "^0.8.3",
		"tslib": "^2.1.0",
		"underscore": "^1.12.0"
	},
	"devDependencies": {
		"@types/app-root-path": "^1.2.4",
		"@types/concurrently": "^6.0.0",
		"@types/express": "^4.17.11",
		"@types/mongodb": "^3.6.8",
		"@types/node": "^14.14.31",
		"@types/semver": "^7.3.4",
		"@types/shortid": "^0.0.29",
		"@types/underscore": "^1.10.24",
		"@typescript-eslint/eslint-plugin": "^4.15.2",
		"@typescript-eslint/parser": "^4.15.2",
		"concurrently": "^5.3.0",
		"cross-env": "^7.0.3",
		"electron": "^8.5.5",
		"electron-builder": "^22.9.1",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.22.0",
		"http-proxy-middleware": "^1.0.6",
		"nodemon": "^2.0.7",
		"prettier": "^2.2.1",
		"request": "^2.88.2",
		"rimraf": "^3.0.2",
		"ts-node": "^9.1.1",
		"typescript": "~4.1"
	}
}
