{
	"name": "companion3",
	"version": "0.1.0",
	"description": "",
	"engines": {
		"node": "^16.13",
		"yarn": "1.22"
	},
	"type": "module",
	"scripts": {
		"test": "jest",
		"clean": "rimraf dist",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"build-server": "tsc",
		"dev-server": "TS_NODE_PROJECT=\"\" nodemon --exec \"node --loader ts-node/esm\" --ignore config.json --watch src --watch ../module-framework/dist -e js,ts,d.ts src/headless.ts",
		"build": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build-server\" \"yarn build-client\""
	},
	"keywords": [
		"typescript",
		"react",
		"starter-kit",
		"webpack",
		"fullstack",
		"express",
		"express4",
		"node"
	],
	"license": "MIT",
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"globals": {
			"ts-jest": {
				"tsConfig": "<rootDir>/src/client/tsconfig-for-tests.json"
			}
		}
	},
	"dependencies": {
		"@companion/core-shared": "*",
		"@companion/module-framework": "*",
		"@elgato-stream-deck/node": "^5.1.1",
		"@julusian/jpeg-turbo": "^1.1.1",
		"axios": "^0.21.1",
		"body-parser": "^1.19.0",
		"concurrently": "^6.4.0",
		"express": "^4.17.1",
		"get-port": "^5.1.1",
		"mongodb": "^3.7.3",
		"p-queue": "^7.1.0",
		"read-pkg-up": "^7.0.1",
		"respawn": "^2.6.0",
		"semver": "^7.3.5",
		"sharp": "^0.29.3",
		"shortid": "^2.2.16",
		"socket.io": "^3.1.2",
		"threads": "^1.7.0",
		"tslib": "^2.3.1",
		"underscore": "^1.13.0"
	}
}
