{
  "name": "companion3",
  "version": "0.1.0",
  "description": "",
  "engines": {
    "node": "12",
    "yarn": "1.22"
  },
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "type-check-client": "tsc -p ./src/client/tsconfig.json",
    "build-client": "cross-env NODE_ENV=production TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack -p",
    "build-server": "tsc -b src",
    "dev-client": "cross-env TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack-dev-server -w",
    "dev-server": "TS_NODE_PROJECT=src/server/tsconfig.json nodemon --ignore config.json src/server/headless.ts",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn dev-server\" \"yarn dev-client\"",
    "dev-electron": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"nodemon -e js,ts,json --ignore src/client --watch src --exec \\\"yarn build-server && electron .\\\"\" \"yarn dev-client\"",
    "build": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build-server\" \"yarn build-client\"",
    "build-unpacked": "yarn build && electron-builder --dir"
  },
  "keywords": [
    "typescript",
    "react",
    "starter-kit",
    "webpack",
    "fullstack",
    "express",
    "express4",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gilamran/fullstack-typescript.git"
  },
  "license": "MIT",
  "author": "Gil Amran",
  "main": "dist/server/electron.js",
  "build": {
    "directories": {
      "buildResources": "assets/",
      "output": "electron-output/"
    },
    "files": [
      "views",
      "assets",
      "dist",
      "LICENSE",
      "!**/*.d.ts",
      "!**/*.tsbuildinfo",
      "!**/*.map"
    ],
    "extraFiles": [
      "bundled-modules"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/src/client/tsconfig-for-tests.json"
      }
    }
  },
  "dependencies": {
    "asar-node": "^2.1.3",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-pouchdb": "^4.2.0",
    "pouchdb-adapter-leveldb": "^7.2.1",
    "pouchdb-adapter-memory": "^7.2.1",
    "pouchdb-all-dbs": "git+https://github.com/julusian/pouchdb-all-dbs.git",
    "pouchdb-promise": "file:./deps/pouchdb-promise",
    "read-pkg-up": "^7.0.1",
    "rxdb": "^8.8.0",
    "rxjs": "^6.5.4",
    "semver": "^7.1.3",
    "socket.io": "^2.3.0",
    "threadedclass": "^0.7.0",
    "tslib": "^1.11.1",
    "underscore": "^1.9.2"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/express": "^4.17.3",
    "@types/node": "^12.12.30",
    "@types/pouchdb-adapter-http": "^6.1.3",
    "@types/pouchdb-adapter-idb": "^6.1.3",
    "@types/pouchdb-adapter-leveldb": "^6.1.3",
    "@types/pouchdb-adapter-memory": "^6.1.3",
    "@types/react": "^16.9.25",
    "@types/react-bootstrap": "^0.32.20",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-bootstrap": "^0.24.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/semver": "^7.1.0",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/underscore": "^1.9.4",
    "@types/webpack": "^4.41.8",
    "@types/webpack-bundle-analyzer": "^2.13.3",
    "@types/webpack-dev-server": "^3.10.1",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "bootstrap": "^4.4.1",
    "bootswatch": "^4.4.1",
    "concurrently": "^5.1.0",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "electron-rebuild": "^1.10.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "http-proxy-middleware": "^1.0.3",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "pouchdb-adapter-http": "^7.2.1",
    "pouchdb-adapter-idb": "^7.2.1",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-contextmenu": "^2.13.0",
    "react-dom": "^16.13.1",
    "react-router-bootstrap": "^0.25.0",
    "react-router-dom": "^5.1.2",
    "react-selectable-fast": "^3.1.1",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "socket.io-client": "^2.3.0",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-manifest-plugin": "^2.2.0"
  }
}
