{
	"name": "companion3",
	"version": "0.1.0",
	"description": "",
	"engines": {
		"node": "12",
		"yarn": "1.22"
	},
	"scripts": {
		"test": "jest",
		"clean": "rimraf dist",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"type-check-client": "tsc -p ./src/client/tsconfig.json",
		"build-client": "cross-env NODE_ENV=production TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack -p",
		"build-server": "tsc -b src",
		"dev-client": "cross-env TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack-dev-server -w",
		"dev-server": "TS_NODE_PROJECT=src/server/tsconfig.json nodemon --ignore config.json --watch src --watch ../module-framework/dist src/server/headless.ts",
		"dev-electron": "nodemon -e js,ts,json --ignore src/client --watch src --exec \"yarn build-server && electron .\"",
		"build": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build-server\" \"yarn build-client\"",
		"build-unpacked": "yarn build && electron-builder --dir -c.electronVersion $(node -p \"require('electron/package.json').version\")"
	},
	"keywords": [
		"typescript",
		"react",
		"starter-kit",
		"webpack",
		"fullstack",
		"express",
		"express4",
		"node"
	],
	"license": "MIT",
	"main": "dist/server/electron.js",
	"build": {
		"directories": {
			"buildResources": "assets/",
			"output": "electron-output/"
		},
		"files": [
			"views",
			"assets",
			"dist",
			"LICENSE",
			"!**/*.d.ts",
			"!**/*.tsbuildinfo",
			"!**/*.map"
		],
		"extraFiles": [
			"bundled-modules"
		]
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"globals": {
			"ts-jest": {
				"tsConfig": "<rootDir>/src/client/tsconfig-for-tests.json"
			}
		}
	},
	"dependencies": {
		"@companion/module-framework": "file:../module-framework",
		"asar-node": "^2.1.3",
		"axios": "^0.19.2",
		"body-parser": "^1.19.0",
		"ejs": "^3.1.5",
		"express": "^4.17.1",
		"iterall": "^1.3.0",
		"mongodb": "^3.6.3",
		"object-path": "^0.11.5",
		"read-pkg-up": "^7.0.1",
		"rxjs": "^6.6.3",
		"semver": "^7.1.3",
		"shortid": "^2.2.16",
		"socket.io": "^2.3.0",
		"threadedclass": "^0.7.0",
		"tslib": "^2.0.3",
		"underscore": "^1.11.0"
	},
	"devDependencies": {
		"@types/app-root-path": "^1.2.4",
		"@types/express": "^4.17.9",
		"@types/mongodb": "^3.5.33",
		"@types/node": "^12.19.4",
		"@types/object-path": "^0.11.0",
		"@types/react": "^16.9.56",
		"@types/react-bootstrap": "^0.32.24",
		"@types/react-dom": "^16.9.9",
		"@types/react-router-bootstrap": "^0.24.5",
		"@types/react-router-dom": "^5.1.6",
		"@types/semver": "^7.3.4",
		"@types/shortid": "^0.0.29",
		"@types/socket.io": "^2.1.11",
		"@types/socket.io-client": "^1.4.34",
		"@types/underscore": "^1.10.24",
		"@types/webpack": "^4.41.24",
		"@types/webpack-bundle-analyzer": "^2.13.3",
		"@types/webpack-dev-server": "^3.11.1",
		"@types/webpack-manifest-plugin": "^2.1.0",
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"bootstrap": "^4.5.3",
		"bootswatch": "^4.5.3",
		"concurrently": "^5.3.0",
		"core-js": "^3.7.0",
		"cross-env": "^7.0.2",
		"css-loader": "^3.6.0",
		"electron": "^8.5.3",
		"electron-builder": "^22.9.1",
		"eslint": "^7.13.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"file-loader": "^6.2.0",
		"http-proxy-middleware": "^1.0.6",
		"node-sass": "^4.14.1",
		"nodemon": "^2.0.6",
		"prettier": "^2.1.2",
		"prop-types": "^15.7.2",
		"react": "^16.14.0",
		"react-bootstrap": "^1.4.0",
		"react-contextmenu": "^2.14.0",
		"react-dom": "^16.14.0",
		"react-router-bootstrap": "^0.25.0",
		"react-router-dom": "^5.1.2",
		"react-selectable-fast": "^3.1.1",
		"request": "^2.88.2",
		"rimraf": "^3.0.2",
		"sass-loader": "^8.0.2",
		"socket.io-client": "^2.3.1",
		"style-loader": "^1.3.0",
		"ts-loader": "^6.2.2",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3",
		"url-loader": "^4.1.1",
		"webpack": "^4.44.2",
		"webpack-bundle-analyzer": "^3.9.0",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.10.3",
		"webpack-manifest-plugin": "^2.2.0"
	}
}
