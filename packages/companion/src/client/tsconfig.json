{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		// "noEmit": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		// "outDir": "../../dist/client",
		"lib": ["ESNext", "DOM"],
		"types": [],
		"jsx": "react",
		"declaration": false,
		"strict": true,
		"rootDir": ".."
	},
	"include": ["**/*.ts", "**/*.tsx", "../shared/**/*.ts"],
	"exclude": ["**/*.test.ts", "**/*.test.tsx"],
	"references": [{ "path": "../shared" }]
}
