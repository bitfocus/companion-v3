{
	"extends": "../../tsconfig-base.json",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		// "importHelpers": false,
		"paths": {
			"*": ["./node_modules/*"],
			"@companion/core-shared": ["../shared/src"],
			"respawn": ["./src/@types/respawn"]
		},
		"types": ["node"],
		"declaration": true,
		"declarationMap": true,
		// "module": "ES2020"
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	}
}
